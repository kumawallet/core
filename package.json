{
  "name": "kuama-core",
  "version": "1.0.0",
  "description": "REST API for Kuma Wallet",
  "author": "Blockcoders <engineering@blockcoders.io>",
  "private": true,
  "engines": {
    "node": "^16.x || >=18.x || >=20.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "tap --include=src/**/*.spec.ts",
    "test:cov": "tap --include=src/**/*.spec.ts --coverage-report=text-summary --coverage-report=lcovonly --allow-incomplete-coverage",
    "start:dockers": "docker-compose up -d",
    "stop:dockers": "docker-compose stop",
    "down:dockers": "docker-compose down -v --rmi=local  --remove-orphans",
    "logs": "docker-compose logs --tail=60 -f",
    "backend:logs": "pnpm run logs -- backend",
    "backend:start": "pnpm run start:dockers -- backend",
    "backend:stop": "pnpm run stop:dockers -- backend",
    "backend:rebuild": "docker-compose rm -s v -f backend && pnpm run start:dockers -- --build --force-recreate backend",
    "backend:restart": "pnpm run backend:stop && pnpm run backend:start"
  },
  "precommit": [
    "lint:ci",
    "test:cov"
  ],
  "dependencies": {
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/compress": "^6.5.0",
    "@fastify/helmet": "^11.1.1",
    "@nestjs/apollo": "^12.1.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/platform-fastify": "^10.3.8",
    "@nestjs/schedule": "^4.0.2",
    "axios": "^1.6.8",
    "cache-manager": "^5.5.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "nestjs-pino": "^3.5.0",
    "pino": "^8.20.0",
    "pino-http": "^8.5.1",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@types/node": "^20.12.7",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "pino-pretty": "^10.2.3",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.5",
    "tap": "^18.7.2",
    "typescript": "^5.4.5"
  },
  "tap": {
    "diag": true,
    "bail": false,
    "comments": true,
    "timeout": 40000
  }
}
